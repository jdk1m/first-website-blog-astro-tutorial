---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';
const allPosts = Object.values(import.meta.glob('./posts/*.md', {eager: true }));
---
<BaseLayout>
      <h1>My Astro Page</h1>
		<h1>My Astro Learning Blog</h1>
      <p>This is where I will post about my journey learning Astro.</p>
      <ul>
 {allPosts.map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
      </ul>

      <div>
         <h2>Tags</h2>
         <a href='./tags/astro'>astro</a>
         <a href='./tags/sucesses'>successes</a>
         <a href='./tags/learning in public'>learning in public</a>
         <a href='./tags/astro'>setbacks</a>
      </div>

</BaseLayout>

